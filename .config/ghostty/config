# Note: auto-update works only on macOS; ignored on Linux.
# Note: GTK titlebar behavior can vary across desktops/versions.
# font
font-family = "SF Mono"
font-size = 12
font-thicken = false

# appearance
theme = catppuccin-mocha
macos-titlebar-style = hidden
gtk-titlebar = false
window-padding-x = 0  
window-padding-y = 0
window-padding-balance = true
window-padding-color = extend

# behavior
mouse-hide-while-typing = true
copy-on-select = true
scrollback-limit = 100000
unfocused-split-opacity = 0.8
auto-update = check

# keybindings for pane navigation
keybind = cmd+left=goto_split:left
keybind = cmd+right=goto_split:right
keybind = cmd+up=goto_split:top
keybind = cmd+down=goto_split:bottom

# split creation
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down

# window management
keybind = cmd+w=close_surface
