# Global Clang-Tidy configuration (sane defaults)
# Project-local .clang-tidy files override these settings.

Checks: >
  clang-diagnostic-*,
  clang-analyzer-*,
  bugprone-*,
  performance-*,
  portability-*,
  readability-*,
  modernize-*,
  misc-*,
  cppcoreguidelines-*,
  hicpp-*,
  concurrency-*,
  -readability-identifier-length,
  -readability-identifier-naming,
  -readability-braces-around-statements,
  -readability-magic-numbers,
  -cppcoreguidelines-avoid-magic-numbers,
  -cppcoreguidelines-avoid-c-arrays,
  -hicpp-avoid-c-arrays,
  -cppcoreguidelines-pro-type-reinterpret-cast,
  -cppcoreguidelines-non-private-member-variables-in-classes,
  -modernize-use-trailing-return-type,
  -cppcoreguidelines-pro-bounds-array-to-pointer-decay,
  -hicpp-no-array-decay,
  -misc-non-private-member-variables-in-classes

# Respect project formatting; fallback to built-in if none.
FormatStyle: file

# Analyze all headers by default.
HeaderFilterRegex: '.*'

# Allow inheriting from parent configs if present.
InheritParentConfig: true

# Common option tweaks to reduce noise and improve modernize suggestions.
CheckOptions:
  - key: modernize-use-nullptr.NullMacros
    value: 'NULL'
  - key: readability-implicit-bool-conversion.AllowIntegerConditions
    value: 'true'
  - key: readability-implicit-bool-conversion.AllowPointerConditions
    value: 'true'

# CUDA note: if device-side analysis is noisy, consider adding in a project .clang-tidy:
# ExtraArgs: ['--cuda-host-only']
